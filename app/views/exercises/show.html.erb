<%= render partial: "shared/partials/navigation" , locals: { title: @exercise.name, exercise: @exercise} %>

<div class="d-flex flex-column flex-md-row p-0 m-0 align-items-center justify-content-center">
  <h2 class="display-5 fw-bold text-body-emphasis m-0">Recent Sets</h2>
</div>
<div class="d-flex flex-column flex-md-row p-0 align-items-center justify-content-center">
  <p><small class="text-muted">(past <%= Constants::RECORDS_TIMESPAN_MONTHS %> months)</small></p>
</div>
<div class="d-flex flex-column flex-md-row p-1 gap-4 py-md-1 align-items-center justify-content-center">
  <div class="recent-sets-list list-group">
    <% @sets.each do |set| %>
      <%= render partial: "shared/partials/recent_set" , locals: { set: set, show_date: true } %>
    <% end %>
  </div>
</div>

<%= render partial: "shared/partials/rep_max_calc" , locals: { sets: @sets} %>

<div class="d-flex flex-column flex-md-row p-1 align-items-center justify-content-center">
  <h2 class="display-5 fw-bold text-body-emphasis">Log Set</h2>
</div>
<div class="d-flex flex-column flex-md-row p-1 gap-4 py-md-1 align-items-center justify-content-center">
  <div class="log-set-forms-list list-group">

    <% @exercise.set_types.each do |set_type| %>
      <%= render partial: "shared/partials/log_set_form" , locals: { set_type: set_type, exercise: @exercise, method: 'create'} %>
    <% end %>
  </div>
</div>



<div class="d-flex flex-column flex-md-row p-1 align-items-center justify-content-center">
  <%= link_to exercises_path, class: "btn btn-primary rounded-pill px-3" do %>
    <i class="bi bi-chevron-left"></i>
    Exercise List
    <% end %>
</div>
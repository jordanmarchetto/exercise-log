<div class="container text-center">
  <div class="row">
    <div class="col">

      <h1>
        <%= @exercise.name %>
      </h1>

      <p>
        <%= @exercise.description %>
      </p>

      <div class="d-flex gap-2 justify-content-center py-2">
        <%= link_to edit_exercise_path(@exercise), class: "btn btn-secondary rounded-pill px-3" do %>
          <i class="bi bi-pencil-fill"></i>
          Edit
          <% end %>
            <%= button_to exercise_path(@exercise), method: :delete, class: "btn btn-danger rounded-pill px-3" do %>
              <i class="bi bi-trash3-fill"></i>
              Delete
              <% end %>
      </div>

      <div class="row">
        <div class="col">        
          <h2>Sets</h2>
          <ul>
          <% @sets.each do |set| %>
            <li><%= set.type %> <%= set.created_at %>: <%= "#{set.rep_count}x#{set.rep_value}lbs." %>  <%= "(RPE: #{set.rpe})" if set.rpe? %></li>
          <% end %>
          </ul>

          <% @exercise.set_types.each do |set_type| %>
            <%= form_for @set, url: exercise_workout_sets_path(@exercise.id) do |form|%>
              <%= hidden_field_tag "type", "#{set_type}" %>

              <%= "Log a #{set_type}" %>
              <% if set_type.constantize.has_weight? %>
                <div class="form-floating py-2">
                  <%= text_field_tag :rep_value, nil, class: 'form-control' , placeholder: 'Weight' %>
                  <%= form.label :weight %>
                </div>
              <% end %>
              <% if set_type.constantize.has_reps? %>
                <div class="form-floating py-2">
                  <%= text_field_tag :rep_count, nil, class: 'form-control' , placeholder: 'Reps' %>
                  <%= form.label :rep_count %>
                </div>
              <% end %>
              <% if set_type.constantize.has_rpe? %>
                <div class="form-floating py-2">
                  <%= text_field_tag :rpe, nil, class: 'form-control' , placeholder: 'RPE' %>
                  <%= form.label :rpe %>
                </div>
              <% end %>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-plus-circle-fill"></i>
                Log Set
              </button>
            <% end %>
          <% end %>

        </div>
      </div>

      <div class="d-flex gap-2 justify-content-center py-1">
        <%= link_to exercises_path, class: "btn btn-primary rounded-pill px-3" do %>
          <i class="bi bi-chevron-left"></i>
          All Exercises
          <% end %>
      </div>

    </div>
  </div>
</div>
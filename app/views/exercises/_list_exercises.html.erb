
<div class="list-exercises d-flex flex-column flex-md-row p-2 gap-4 py-md-2 align-items-center justify-content-center">
    <div class="exercise-list-wrapper list-group">
  
      <% @exercises.each do |exercise| %>
        <a href="<%= exercise_path(exercise)%>" class="list-group-item list-group-item-action d-flex gap-3 py-3"
          aria-current="true">
          <div class="rounded-circle flex-shrink-0">
            <span class="exercise-icon bi <%= exercise.icon.present? ? exercise.icon : 'bi-person-arms-up' %>"></span>
          </div>
  
          <div class="exercise-name-wrapper d-flex gap-2 w-100 justify-content-between ">
            <div>
              <h6 class="mb-0">
                <%= exercise.name %>
              </h6>
            </div>
          </div>
        </a>
      <% end %>
  
      <%= link_to new_exercise_path, class: "list-group-item list-group-item-action d-flex gap-3 py-3" do %>
        <button type="button" class="btn btn-success">
          <i class="bi bi-plus-circle-fill"></i>
          Add Exercise
        </button>
      <% end %>
    </div>
  </div>
<div class="list-group-item rounded-3 py-3 my-1">
    <%= form_for @set, url: exercise_workout_sets_path(exercise.id) do |form|%>
      <%= hidden_field_tag "type" , "#{set_type}" %>

        <h6>
          <%= "#{set_type}:" %>
        </h6>
        <% if set_type.constantize.has_weight? %>
          <div class="form-floating py-2">
            <%= text_field_tag :rep_value, nil, class: 'form-control' , placeholder: 'Weight' %>
              <%= form.label :weight %>
          </div>
          <% end %>

            <% if set_type.constantize.has_reps? %>
              <div class="form-floating py-2">
                <%= text_field_tag :rep_count, nil, class: 'form-control' , placeholder: 'Reps' %>
                  <%= form.label :rep_count %>
              </div>
              <% end %>

            <% if set_type.constantize.has_distance? %>
              <div class="form-floating py-2">
                <%= text_field_tag :distance, nil, class: 'form-control' , placeholder: 'Distance' %>
                  <%= form.label :distance %>
              </div>

              <div class="form-floating py-2">
                <%= text_field_tag :distance_unit, 'miles', class: 'form-control' , placeholder: 'Distance Unit' %>
                  <%= form.label :distance_unit %>
              </div>
              <% end %>

            <% if set_type.constantize.has_duration? %>
              <div class="form-floating py-2">
                <%= text_field_tag :duration, nil, class: 'form-control' , placeholder: 'Duration (seconds)' %>
                  <%= form.label :duration %>
              <%= hidden_field_tag "timer_direction" , "#{:up}" %>
              </div>
              <% end %>

                <% if set_type.constantize.has_rpe? %>
                  <div class="form-floating py-2">
                    <%= text_field_tag :rpe, nil, class: 'form-control' , placeholder: 'RPE' %>
                      <%= form.label :rpe %>
                  </div>
                  <%= render partial: "shared/partials/rpe_guidelines" %>
                  <% end %>

                    <button type="submit" class="btn btn-success">
                      <i class="bi bi-plus-circle-fill"></i>
                      Log Set
                    </button>
                    <% end %>
  </div>
